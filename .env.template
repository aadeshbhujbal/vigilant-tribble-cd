# Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# Core Settings
NODE_ENV=development
PORT=3005
HOST=localhost
NODE_TLS_REJECT_UNAUTHORIZED=1

# Security Configuration
ENABLE_HTTPS=false
TRUST_PROXY=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization
CREDENTIALS=true
MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=10m
LOG_MAX_FILES=5
LOG_ENABLE_REQUEST_LOGGING=true
LOG_ENABLE_ERROR_LOGGING=true

# Feature Flags
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_RATE_LIMIT=true
ENABLE_HEALTH_CHECK=true

# Application Configuration
APP_NAME=clima-risk-validator-service
APP_VERSION=1.0.0
API_PREFIX=/api
MAX_REQUEST_SIZE=1mb
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Service Integration
PYTHON_SERVICE_URL=http://localhost:8000
ANGULAR_APP_URL=http://localhost:4200
SERVICE_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
