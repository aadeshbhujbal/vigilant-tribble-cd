# Environment Configuration for Local Development
# This file contains local development environment variables

# Core Settings
NODE_ENV=development
PORT=3005
HOST=localhost
NODE_TLS_REJECT_UNAUTHORIZED=1

# Security Configuration
ENABLE_HTTPS=false
TRUST_PROXY=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3005,http://localhost:4200
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization
CREDENTIALS=true
MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=10m
LOG_MAX_FILES=5
LOG_ENABLE_REQUEST_LOGGING=true
LOG_ENABLE_ERROR_LOGGING=true

# Feature Flags
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_RATE_LIMIT=true
ENABLE_HEALTH_CHECK=true
ENABLE_FILE_UPLOAD=true

# Application Configuration
APP_NAME=clima-risk-validator-service
APP_VERSION=1.0.0
API_PREFIX=/api
MAX_REQUEST_SIZE=1mb
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=52428800
FILE_UPLOAD_ALLOWED_TYPES=application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv,application/json,text/plain,image/jpeg,image/png,image/tiff
FILE_UPLOAD_ALLOWED_EXTENSIONS=.pdf,.xls,.xlsx,.csv,.json,.txt,.jpg,.jpeg,.png,.tiff
FILE_UPLOAD_MAX_FILES=5
FILE_UPLOAD_TIMEOUT=300000
FILE_UPLOAD_ENABLE_VALIDATION=true
FILE_UPLOAD_ENABLE_MALWARE_SCAN=false

# Service Integration
# PYTHON_SERVICE_URL=http://your-python-service-url.com  # Configure when Python service is ready
ANGULAR_APP_URL=http://localhost:4200
SERVICE_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000